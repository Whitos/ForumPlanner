{% extends 'base.html.twig' %}

{% block title %}Stand index{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-5">Stand index</h1>

    <table class="min-w-full bg-white border border-gray-200 shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-800 text-white">
        <tr>
            <th class="py-3 px-6 text-left">Id</th>
            <th class="py-3 px-6 text-left">Title</th>
            <th class="py-3 px-6 text-left">Description</th>
            <th class="py-3 px-6 text-left">Capacity</th>
            <th class="py-3 px-6 text-left">Duration</th>
            <th class="py-3 px-6 text-left">Note moyenne</th>
            <th class="py-3 px-6 text-left">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for stand in stands %}
            <tr class="border-b">
                <td class="py-4 px-6">{{ stand.id }}</td>
                <td class="py-4 px-6">{{ stand.title }}</td>
                <td class="py-4 px-6">{{ stand.description }}</td>
                <td class="py-4 px-6">{{ stand.capacity }}</td>
                <td class="py-4 px-6">{{ stand.duration ? stand.duration|date('H:i:s') : '' }}</td>
                <td class="py-4 px-6">{{ stand.getAverageNote() }}</td>
                <td class="py-4 px-6">
                    <a href="{{ path('app_stand_show', {'id': stand.id}) }}" class="text-indigo-600 hover:text-indigo-900">Show</a>
                    <a href="{{ path('app_stand_edit', {'id': stand.id}) }}" class="text-yellow-500 hover:text-yellow-700 ml-4">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="py-4 px-6 text-center text-gray-500">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-5">
        <a href="{{ path('app_stand_new') }}" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">Create new</a>
    </div>
{% endblock %}
