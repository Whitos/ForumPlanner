{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-2xl font-bold text-center mb-6">Reset your password</h1>

        {{ form_start(requestForm, { attr: { class: 'space-y-4' } }) }}
        <div>
            {{ form_row(requestForm.email, {
                label_attr: { class: 'block text-sm font-medium text-gray-700' },
                attr: { class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' }
            }) }}
        </div>
        <div class="text-sm text-gray-600 mt-2">
            <small>
                Enter your email address, and we will send you a
                link to reset your password.
            </small>
        </div>

        <div class="text-center mt-4">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Send password reset email
            </button>
        </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
