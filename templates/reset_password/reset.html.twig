{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10">
        <h1 class="text-2xl font-bold text-center mb-6">Reset your password</h1>

        {{ form_start(resetForm, { attr: { class: 'space-y-4' } }) }}
        <div class="space-y-4">
            {{ form_row(resetForm.plainPassword, {
                label_attr: { class: 'block text-sm font-medium text-gray-700' },
                attr: { class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' }
            }) }}
        </div>
        <div class="text-center">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Reset password
            </button>
        </div>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
