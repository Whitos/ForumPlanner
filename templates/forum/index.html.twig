{% extends 'base.html.twig' %}

{% block title %}Forum index{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-5">Forum index</h1>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200">
            <thead>
            <tr class="bg-gray-200 text-gray-700 uppercase text-sm leading-normal">
                <th class="py-3 px-6 text-left">Id</th>
                <th class="py-3 px-6 text-left">Title</th>
                <th class="py-3 px-6 text-left">Description</th>
                <th class="py-3 px-6 text-left">Location</th>
                <th class="py-3 px-6 text-left">Actions</th>
            </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
            {% for forum in forums %}
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-6 text-left whitespace-nowrap">{{ forum.id }}</td>
                    <td class="py-3 px-6 text-left">{{ forum.title }}</td>
                    <td class="py-3 px-6 text-left">{{ forum.description }}</td>
                    <td class="py-3 px-6 text-left">{{ forum.location }}</td>
                    <td class="py-3 px-6 text-left">
                        <a href="{{ path('app_forum_show', {'id': forum.id}) }}" class="text-blue-500 hover:text-blue-700">Show</a>
                        <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="ml-4 text-yellow-500 hover:text-yellow-700">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="py-3 px-6 text-center text-gray-500">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-5">
        <a href="{{ path('app_forum_new') }}" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">Create new</a>
    </div>
{% endblock %}
